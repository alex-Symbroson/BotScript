
if(Bot_IsBot() == false) {
    println("no RaspiBot found!");
    stop(1);
};

func main = {
    Bot_Write("Welcome :)");
    Bot_SetMotors(50, 50);

    Bot_Write("Press 2", 0, 1);
    Bot_SetGreenLED(2, 100);
    Bot_WaitForBtn(2);
    Bot_SetGreenLED(2, 0);
};

func loop = {
    if(Bot_GetSharp(1) < 20) {
        Bot_StopMotors();
    }
};
